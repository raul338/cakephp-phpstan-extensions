{
    "name": "raul338/cakephp-phpstan-extensions",
    "description": "Services to aid phpstan analysis on CakePHP projects",
    "type": "phpstan-extension",
    "keywords": [
        "cakephp",
        "stub",
        "test",
        "static",
        "analysis"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "RaÃºl Arellano",
            "email": "raul338@elhacker.net"
        }
    ],
    "require": {
        "php": ">=7.3",
        "phpstan/phpstan": "^0.12"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^4.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.6.2",
        "cakephp/cakephp": "^3.8",
        "friendsofcake/crud": "^5.4",
        "phpunit/php-code-coverage": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Raul338\\Phpstan\\Cake\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Raul338\\Phpstan\\Tests\\": "tests/src"
        }
    },
    "scripts": {
        "cs-check": "vendor/bin/phpcs --colors -p -s ./src ./tests",
        "cs-fix": "vendor/bin/phpcbf --colors -p -s ./src ./tests",
        "coverage": "php tests/phpstan-coverage.php",
        "clean": "rm -rf reports/* && rm -rf tmp/coverages/*",
        "phpstan": "vendor/bin/phpstan analyze -c phpstan.neon --ansi --memory-limit=-1",
        "phpstan-test": "vendor/bin/phpstan analyze -c tests.neon --xdebug",
        "report": "php tests/coverage_report.php",
        "test": [
            "@clean",
            "@phpstan",
            "@coverage",
            "@report"
        ]
    }
}
